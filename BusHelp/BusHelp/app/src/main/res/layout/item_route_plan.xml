<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
                                             android:layout_margin="10dp"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
        android:text="8p21"
        android:background="@drawable/bus_num_bg"
        android:layout_width="41dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:id="@+id/item_route_plan_line1"
        android:layout_height="31dp"/>
    <ImageView
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/item_route_plan_line1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_route_plan_line1"
        android:background="@mipmap/arrow_ic"
        android:id="@+id/item_route_plan_image1"
        android:layout_height="wrap_content"/>


    <ImageView
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/item_route_plan_line2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_route_plan_line1"
        android:background="@mipmap/arrow_ic"
        android:id="@+id/item_route_plan_image2"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="8p21"
        android:background="@drawable/bus_num_bg"
        android:layout_width="41dp"
        android:gravity="center"
        android:layout_marginLeft="7dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/item_route_plan_image1"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:id="@+id/item_route_plan_line2"
        android:layout_height="31dp"/>


    <TextView
        android:text="8p21"
        android:background="@drawable/bus_num_bg"
        android:layout_width="41dp"
        android:gravity="center"
        android:layout_marginLeft="7dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/item_route_plan_image2"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:id="@+id/item_route_plan_line3"
        android:layout_height="31dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:text="buxing"
        android:layout_height="wrap_content"
        android:id="@+id/item_route_plan_walk_distance"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/item_route_plan_line1"
        app:layout_constraintLeft_toRightOf="@+id/item_route_plan_money3"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="8dp"
        android:text="￥4"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/item_route_plan_line2"
        app:layout_constraintLeft_toLeftOf="@+id/item_route_plan_line2"
        android:id="@+id/item_route_plan_money2"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="￥3"
        android:layout_height="wrap_content"
        android:id="@+id/item_route_plan_money"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/item_route_plan_line1"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="￥5"
        android:layout_height="wrap_content"
        android:id="@+id/item_route_plan_money3"
        app:layout_constraintLeft_toLeftOf="@+id/item_route_plan_line3"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/item_route_plan_line1"/>
</android.support.constraint.ConstraintLayout>